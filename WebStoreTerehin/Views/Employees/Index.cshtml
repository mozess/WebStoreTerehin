@model IEnumerable<WebStoreTerehin.Models.Employee>
<div class="container">
<h3>Сотрудники</h3>
<hr />
<table class="table">
    <tr>
        <th>Id</th>
        <th>Фамилия</th>
        <th>Имя</th>
        <th>Отчество</th>
        <th>Возраст</th>
        <th>Доп информация</th>
        <th>Удаление</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
        <tr>
            <td>@employee.Id</td>
            <td>@employee.Name</td>
            <td>@employee.Surname</td>
            <td>@employee.Patronymic</td>
            <td>@employee.Age</td>
            <td><a asp-controller="Employees" asp-action="Details" asp-route-id="@employee.Id">Информация</a></td>
            <td><a asp-controller="Employees" asp-action="DeleteEmployees" asp-route-id="@employee.Id">Удалить сотрудника</a></td>
        </tr>
        }
    </tbody>
</table>
<hr />
<a asp-controller="Home" asp-action="Index">На главную</a>
</div>