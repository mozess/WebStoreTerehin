@model IEnumerable<WebStoreTerehin.Models.Employee>
<div class="container">
<h3>Сотрудники</h3>
<hr />
<table class="table">
    <tr>
        <th>Фамилия</th>
        <th>Имя</th>
        <th>Отчество</th>
        <th>Возраст</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Name</td>
                <td>@employee.Surname</td>
                <td>@employee.Patronymic</td>
                <td>@employee.Age</td>
                <td><a asp-controller="Employees" asp-action="Details" asp-route-id="@employee.Id">Информация</a></td>
            </tr>
        }
    </tbody>
</table>
<hr />
<a href="~/">На главную</a>
</div>