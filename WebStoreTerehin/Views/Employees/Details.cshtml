@model WebStoreTerehin.Models.Employee

    <div class="container">
        <h3>Сотрудник</h3>

        <dl class="dl-horizontal">
            <dt>Фамилия</dt>
            <dd>@Model.Surname</dd>
            <dt>Имя</dt>
            <dd>@Model.Name</dd>
            <dt>Отчество</dt>
            <dd>@Model.Patronymic</dd>
            <dt>Возраст</dt>
            <dd>@Model.Age</dd>
            <dt>Принят на работу</dt>
            <dd>@Model.DateOfEmployment</dd>
        </dl>

        <hr />
        <div>
            <a asp-controller="Employees" asp-action="Index" class="btn btn-primary">К списку</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Удалить!</a>
        </div>
        <br/>
    </div>